rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Kullanıcılar sadece kendi projelerini görebilir
    match /projects/{projectId} {
      allow read: if request.auth != null && 
                     resource.data.clientId == request.auth.uid;
      allow write: if false; // Sadece admin tarafından yazılabilir
    }
    
    // Clients collection
    match /clients/{clientId} {
      allow read: if request.auth != null && request.auth.uid == clientId;
      allow write: if false; // Sadece admin tarafından yazılabilir
    }
    
    // Phases collection
    match /phases/{phaseId} {
      allow read: if request.auth != null;
      allow write: if false;
    }
    
    // Tasks collection
    match /tasks/{taskId} {
      allow read: if request.auth != null;
      allow write: if false;
    }
    
    // Updates collection
    match /updates/{updateId} {
      allow read: if request.auth != null;
      allow write: if false;
    }
    
    // Messages collection - kullanıcılar mesajlaşabilir
    match /messages/{messageId} {
      allow read, write: if request.auth != null;
    }
    
    // Files collection
    match /files/{fileId} {
      allow read: if request.auth != null;
      allow write: if false;
    }
    
    // Approvals collection
    match /approvals/{approvalId} {
      allow read: if request.auth != null;
      allow write: if false; // Sadece admin onay verebilir
    }
    
    // Notifications collection
    match /notifications/{notificationId} {
      allow read, update: if request.auth != null && 
                              resource.data.userId == request.auth.uid;
      allow write: if false;
    }
  }
}

